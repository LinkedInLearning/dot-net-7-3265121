@page "/counter"

@inject IJSRuntime js

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<NavigationLock ConfirmExternalNavigation="EstModifie"
    OnBeforeInternalNavigation="Confirmer"/>

@code {
    private int currentCount = 0;

    private bool EstModifie => currentCount>0;

    private async Task Confirmer(LocationChangingContext lcc)
    {
        if(currentCount>0 && !await js.InvokeAsync<bool>("confirm", "Remettre le compteur à zéro ?"))
        {
            lcc.PreventNavigation();
        }
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}
